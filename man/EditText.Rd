\name{EditText}

\alias{EditText}

\title{Edit Text}

\description{
A \acronym{GUI} for viewing and editing text.
}

\usage{
EditText(txt, read.only = FALSE, win.title = "View Text",
         is.fixed.width.font = FALSE, parent = NULL)
}

\arguments{
\item{txt}{character; the data used to populate the table.}
\item{read.only}{logical; specifies whether the text is read only.}
\item{win.title}{character; a string to display as the title of the dialog box.}
\item{is.fixed.width.font}{logical; should a fixed-width font be used?}
\item{parent}{tkwin; the \acronym{GUI} parent window.}
}

\details{
Something
}

\author{J.C. Fisher}

\examples{\donttest{
txt <- c("\"Hills cherish the ambition",
         "    to turn into partial",
         "   differential equations\"",
         "",
         "        -Donald Hall")
new.txt <- EditText(txt)

EditText(txt, read.only = TRUE)
}}

